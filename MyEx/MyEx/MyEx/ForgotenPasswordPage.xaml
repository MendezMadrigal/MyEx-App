<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyEx.ForgotenPasswordPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#DDCAED">
            <Label Text="Le enviaremos a su correo electrónico la contraseña que usted posee, sin embargo, cuando vuelva a ingresar será necesario que ingrese delse el mismo dispositivo y que de manera inmediata cambie la contraseña"
                   Margin="50,50"
                   XAlign="Center"
                   FontSize="25"
                   TextColor="Black"
                   />

            <Button x:Name="Ok"
                    Text="Continuar"
                    Margin="40,20"
                    BorderRadius="100"
                    BackgroundColor="#DDCAED"
                    BorderWidth="1"
                    BorderColor="#5B197B"
                    Clicked="Ok_Clicked"
                    />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>